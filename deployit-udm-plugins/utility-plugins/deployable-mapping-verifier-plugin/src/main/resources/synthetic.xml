<?xml version="1.0" encoding="UTF-8"?>
<synthetic xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://www.xebialabs.com/deployit/synthetic"
           xsi:schemaLocation="http://www.xebialabs.com/deployit/synthetic synthetic.xsd">

<!-- we'll use the PostPlanProcessor instead of the Validator, because the deployeds have not yet been added to the DeployedApplication
     when the Validator runs (in 3.9.3) -->
<!--   <type-modification type="udm.DeployedApplication"> -->
<!--   	<rule type="complete-deployment"/> -->
<!--   </type-modification> -->

  <type-modification type="udm.BaseDeployable">
    <property name="requiredDeploymentCardinality" kind="enum" enum-class="com.xebialabs.deployit.community.validator.DeploymentCardinality" required="false"
      description="specifies how many Deployeds should be generated from this Deployable" default="MANDATORY" category="Deployment" label="Required cardinality" />
  </type-modification>

  <type-modification type="udm.Environment">
    <property name="ignoreRedundancyRequirements" kind="boolean" required="false"
      description="ignore requirements for redundancy in Deployable.requiredDeploymentCardinality" default="false" category="Deployment" label="ignore redundancy requirements" />
    <property name="ignoreCardinalityRequirements" kind="boolean" required="false"
      description="ignore all requirements in Deployable.requiredDeploymentCardinality" default="false" category="Deployment" label="ignore cardinality requirements" />
  </type-modification>

</synthetic>